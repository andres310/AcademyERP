<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="myPersistenceUnit" transaction-type="JTA">
        <!-- Escaneo automático de entidades -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!-- Configuración de la conexión a MySQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/acad"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            
            <!-- Hibernate (proveedor de JPA) propiedades adicionales -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>

            <!-- Otras configuraciones útiles -->
            <property name="hibernate.show_sql" value="true"/> <!-- Muestra las consultas SQL en consola -->
            <property name="hibernate.format_sql" value="true"/> <!-- Formatea las consultas SQL -->
            
        </properties>
    </persistence-unit>
</persistence>
